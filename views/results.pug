extends layout

block content
  h1 Results!
  h2 #{poll.question}
  div(style="width:75vmin; height:75vmin")
    canvas(id="myChart", width="80%", height="80%")
  

  script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js")
  script. 
    window.answer_types = !{answer_types};
    window.answer_colours = !{answer_colours};
    window.answer_counts = !{answer_counts};

  script(src="/controllers/chart.client.js")
